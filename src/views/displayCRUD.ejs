<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Get CRUD</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
</head>
<style>
  button.btn-edit {
    border: none;
    background-color: orange;
    border-radius: 5px;
    width: 60px;
}
button.btn-delete {
    border: none;
    background-color: red;
    border-radius: 5px;
    width: 60px;
}
</style>
<body>
    <div class="container">
        <h4>All Users </h4>
        <table style="border: solid black 1px;" class="table table-hover mt-3">
            <thead>
              <tr>
                <th scope="col">#</th>
                <th scope="col">Email</th>
                <th scope="col">First name</th>
                <th scope="col">Last name</th>
                <th scope="col">Address</th>
                <th scope="col">Phone</th>
                <th scope="col">action</th>
              </tr>
            </thead>
            <tbody>
                <% for(var i=0; i < users.length; i++) { %>
                  <tr >
                    <th scope="row"><%= i %></th>
                    <td><%= users[i].email %></td>
                    <td><%= users[i].firstName %></td>
                    <td><%= users[i].lastName %></td>
                    <td><%= users[i].address %></td>
                    <td><%= users[i].phonenumber %></td>
                    <td>
                      <a href="/edit-crud?id=<%=users[i].id%>" class="btn-edit" type="button">Edit</a>
                      <a href="/delete-crud?id=<%=users[i].id%>" class="btn-delete" type="button">Delete</a>
                    </td>
                  </tr>
                <% } %>
            </tbody>
          </table>
    </div>
</body>
</html>